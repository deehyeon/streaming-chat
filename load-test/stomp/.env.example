# 서버 설정
SERVER_URL=localhost:8080

# 인증 방법 1: 직접 토큰 입력 (우선순위 높음)
# TOKEN=eyJhbGciOiJIUzUxMiJ9...

# 인증 방법 2: 자동 로그인 (TOKEN이 없을 경우 사용)
EMAIL=test@test.com
PASSWORD=password123!

# 채팅방 설정 방법 1: 기존 채팅방 ID 직접 입력 (우선순위 높음)
ROOM_ID=100

# 채팅방 설정 방법 2: 새 단체방 생성
# CREATE_NEW_ROOM=true
# MEMBER_IDS=1,2,3,4,5  # 쉼표로 구분된 멤버 ID 목록

# 테스트 설정
MESSAGE_INTERVAL_MS=1000  # 메시지 전송 간격 (밀리초)

# 재연결 설정 (v3.0 추가)
ENABLE_RECONNECT=true           # 재연결 기능 활성화
MAX_RECONNECT_ATTEMPTS=5        # 최대 재연결 시도 횟수
INITIAL_BACKOFF_MS=1000         # 초기 백오프 시간 (밀리초)
MAX_BACKOFF_MS=30000            # 최대 백오프 시간 (밀리초)
